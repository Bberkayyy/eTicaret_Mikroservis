@model IEnumerable<ResultProductWithRelationshipsDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            @if (Model.Count() > 0)
            {
                <div class="chart-box">
                    <p>Ürünler ile ilgili işlemlerinizi aşağıdaki tablodan gerçekleştirebilirsiniz.</p>
                    <hr />
                    <div class="bs-example" data-example-id="simple-responsive-table">
                        <div class="table-responsive m-top-2">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Ürün Adı</th>
                                        <th>Fiyatı</th>
                                        <th>Kategorisi</th>
                                        <th>Görseller</th>
                                        <th>Açıklama ve Bilgi</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td>@item.Price ₺</td>
                                            <td>@item.CategoryName</td>
                                            <td><a href="/admin/productimage/images/@item.Id" class="btn btn-warning">Görseller</a></td>
                                            <td><a href="/admin/productdetail/details/@item.Id" class="btn btn-default">Açıklama ve Bilgi</a></td>
                                            <td><a href="/admin/product/deleteproduct/@item.Id" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/admin/product/updateproduct/@item.Id" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/admin/product/createproduct/" class="btn btn-primary">Ürün Ekle</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <p class="bg-danger text-white p-4 text-center table-responsive">Ürün bilgisi bulunamadı. Ürün eklemek için "Ürün Ekle" butonuna tıklayınız.</p>
                <a href="/admin/product/createproduct/" class="btn btn-primary">Ürün Ekle</a>
            }
        </div>
    </div>
</section>

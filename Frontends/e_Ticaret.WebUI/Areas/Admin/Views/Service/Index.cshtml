@model IEnumerable<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            @if (Model.Count() > 0)
            {
                <div class="chart-box">
                    <p>Hizmetler ile ilgili işlemlerinizi aşağıdaki tablodan gerçekleştirebilirsiniz. Tema bütünlüğü için en fazla 4 adet hizmet bilgisi girilmelidir.</p>
                    <hr />
                    <div class="bs-example" data-example-id="simple-responsive-table">
                        <div class="table-responsive m-top-2">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Hizmet Başlığı</th>
                                        <th>İkon</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Title</td>
                                            <td>@item.Icon</td>
                                            <td><a href="/admin/service/deleteservice/@item.Id" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/admin/service/updateservice/@item.Id" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/admin/service/createservice/" class="btn btn-primary">Hizmet Ekle</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <p class="bg-danger text-white p-4 text-center table-responsive">Hizmet bilgisi bulunamadı. Hizmet eklemek için "Hizmet Ekle butonuna tıklayınız."</p>
                <a href="/admin/service/createservice/" class="btn btn-primary">Hizmet Ekle</a>
            }
        </div>
    </div>
</section>
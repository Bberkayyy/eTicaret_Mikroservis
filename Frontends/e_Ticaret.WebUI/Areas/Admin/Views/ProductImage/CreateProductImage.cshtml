@model CreateProductImageDto
@{
    ViewData["Title"] = "CreateProductImage";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="chart-box">
        <p>Aşağıdaki formu doldurarak yeni @ViewBag.productName ürününe görsel ekleyebilirsiniz. </p>
        <hr />
        <form method="post">
            <input type="hidden" asp-for="ProductId" value="@ViewBag.productId" />
            <div class="form-group">
                <label for="ProductImageUrl1">1. Görsel Url </label>
                <input type="text" class="form-control" id="ProductImageUrl1" asp-for="ProductImageUrl1">
            </div>
            <div class="form-group">
                <label for="ProductImageUrl2">2. Görsel Url </label>
                <input type="text" class="form-control" id="ProductImageUrl2" asp-for="ProductImageUrl2">
            </div>
            <div class="form-group">
                <label for="ProductImageUrl3">3. Görsel Url </label>
                <input type="text" class="form-control" id="ProductImageUrl3" asp-for="ProductImageUrl3">
            </div>
            <button type="submit" class="btn btn-info">Kaydet</button>
        </form>
    </div>
</div>



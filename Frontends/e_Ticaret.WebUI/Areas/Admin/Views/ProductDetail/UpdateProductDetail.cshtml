@model UpdateProductDetailDto
@{
    ViewData["Title"] = "UpdateProductDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="chart-box">
        <p>Aşağıdaki formu düzenleyerek @ViewBag.productNameForUpdate ürününe ait açıklama ve bilgiyi güncelleyebilirsiniz. </p>
        <hr />
        <form method="post">
            <input type="hidden" asp-for="ProductId" value="@ViewBag.productIdForUpdate" />
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="ProductDescription">Açıklama</label>
                <textarea rows="5" class="form-control" id="ProductDescription" asp-for="ProductDescription"></textarea>
            </div>
            <div class="form-group">
                <label for="ProductInfo">Bilgi</label>
                <textarea rows="5" class="form-control" id="ProductInfo" asp-for="ProductInfo"></textarea>
            </div>
            <button type="submit" class="btn btn-info">Güncelle</button>
        </form>
    </div>
</div>


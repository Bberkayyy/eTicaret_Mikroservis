@model IEnumerable<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            @if (Model.Count() > 0)
            {
                <div class="chart-box">
                    <p>Hakkımızda ile ilgili işlemlerinizi aşağıdaki tablodan gerçekleştirebilirsiniz. Sayfa düzeni için <strong>1 adet</strong> hakkımızda bilgisi bulunmalıdır.</p>
                    <hr />
                    <div class="bs-example" data-example-id="simple-responsive-table">
                        <div class="table-responsive m-top-2">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Adres</th>
                                        <th>Email</th>
                                        <th>Telefon</th>
                                        <th>Açıklama</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Address</td>
                                            <td>@item.Email</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Description</td>
                                            <td><a href="/admin/about/deleteabout/@item.Id" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/admin/about/updateabout/@item.Id" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/admin/about/createabout/" class="btn btn-primary @(Model.Count()==1?"disabled":"")">Hakkımızda Ekle</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <p class="bg-danger text-white p-4 text-center table-responsive">Hakkımızda bilgisi bulunamadı. Hakkımızda bilgiis eklemek için "Hakkımızda Ekle" butonuna tıklayınız.</p>
                <a href="/admin/about/createabout/" class="btn btn-primary">Hakkımızda Ekle</a>
            }
        </div>
    </div>
</section>

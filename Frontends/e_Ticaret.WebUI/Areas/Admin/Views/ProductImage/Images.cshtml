@model ResultProductImageWithRelationshipsByProductIdDto
@{
    ViewData["Title"] = "Images";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            @if (Model is not null)
            {
                <div class="chart-box">
                    <p>@Model.ProductName ürününün görselleri ile ilgili işlemlerinizi aşağıdaki tablodan gerçekleştirebilirsiniz.</p>
                    <hr />
                    <div class="bs-example" data-example-id="simple-responsive-table">
                        <div class="table-responsive m-top-2">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Ürün Adı</th>
                                        <th>Görsel 1</th>
                                        <th>Görsel 2</th>
                                        <th>Görsel 3</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@Model.ProductName</td>
                                        <td><img src="@Model.ProductImageUrl1" style="width:60px;height:50px;" /></td>
                                        <td><img src="@Model.ProductImageUrl2" style="width:60px;height:50px;" /></td>
                                        <td><img src="@Model.ProductImageUrl3" style="width:60px;height:50px;" /></td>
                                        <td><a href="/admin/productimage/deleteimages/@Model.Id" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/admin/productimage/updateimages/@Model.Id" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                </tbody>
                            </table>
                            <a href="/admin/product/index/" class="btn btn-primary">Geri Dön</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <p class="bg-danger text-white p-4 text-center table-responsive">@ViewBag.productName ürününe ait görsel bilgisi bulunamadı. Ürün görseli eklemek için "Görsel Ekle" butonuna tıklayınız.</p>
                <a href="/admin/productimage/createimages/@ViewBag.productId" class="btn btn-primary">Görsel Ekle</a>
            }
        </div>
    </div>
</section>



@model IEnumerable<ResultProductWithRelationshipsByCategoryIdDto>
@{
    ViewData["Title"] = "CategoryProducts";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            @if (Model.Count() > 0)
            {
                <div class="chart-box">
                    <p>@ViewBag.categoryName kategorisine ait ürünler ile ilgili işlemlerinizi aşağıdaki tablodan gerçekleştirebilirsiniz.</p>
                    <hr />
                    <div class="bs-example" data-example-id="simple-responsive-table">
                        <div class="table-responsive m-top-2">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Ürün Adı</th>
                                        <th>Fiyatı</th>
                                        <th>Görseli</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td>@item.Price ₺</td>
                                            <td><img src="@item.ImageUrl" style="width:60px;height:50px;" /></td>
                                            <td><a href="/admin/product/deleteproduct/@item.Id" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/admin/product/updateproduct/@item.Id" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <p class="bg-danger text-white p-4 text-center table-responsive">@ViewBag.categoryName kategorisine ait ürün bilgisi bulunamadı.</p>
            }
        </div>
    </div>
</section>


@model CreateAddressDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}


<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Ana Sayfa</a>
                <a class="breadcrumb-item text-dark" href="#">Siparişler</a>
                <span class="breadcrumb-item active">Sipariş İşlemleri</span>
            </nav>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row px-xl-5">

        <div class="col-lg-8">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Teslimat Adresi</span></h5>
            <div class="bg-light p-30 mb-5">
                <form method="post">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Adınız</label>
                            <input class="form-control" type="text" asp-for="FirstName" placeholder="John">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Soyadınız</label>
                            <input class="form-control" type="text" asp-for="LastName" placeholder="Doe">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>E-mail Adresiniz</label>
                            <input class="form-control" type="text" asp-for="Email" placeholder="example@email.com">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Telefon Numaranız</label>
                            <input class="form-control" type="text" asp-for="Phone" placeholder="+90 123 4567 89">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Adres Satır 1</label>
                            <input class="form-control" type="text" asp-for="Detail" placeholder="123 Mah, 456 Sk,Cad">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Adres Satır 2</label>
                            <input class="form-control" type="text" asp-for="Detail2" placeholder="xxx Apt, No:456">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Ülke</label>
                            <input class="form-control" type="text" asp-for="Country" placeholder="Türkiye">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Şehir</label>
                            <input class="form-control" type="text" asp-for="City" placeholder="Ankara">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>İlçe</label>
                            <input class="form-control" type="text" asp-for="District" placeholder="Çankaya">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Posta Kodu</label>
                            <input class="form-control" type="text" asp-for="PostCode" placeholder="1234">
                        </div>
                    </div>
                </form>
            </div>
        </div>
        @*@await Component.InvokeAsync("_OrderAddressComponentPartial")*@
        <div class="col-lg-4">
            @await Component.InvokeAsync("_OrderSummaryComponentPartial")
            @await Component.InvokeAsync("_OrderPaymentMethodComponentPartial")
        </div>
    </div>
</div>


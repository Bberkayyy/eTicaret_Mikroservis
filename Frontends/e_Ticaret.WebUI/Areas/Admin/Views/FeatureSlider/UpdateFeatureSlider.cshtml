@model UpdateFeatureSliderDto
@{
    ViewData["Title"] = "UpdateFeatureSlider";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}
<div class="col-md-12">
    <div class="chart-box">
        <p>Aşağıdaki formu düzenleyerek öne çıkan görseli güncelleyebilirsiniz.</p>
        <hr />
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="Title">Başlık</label>
                <input type="text" class="form-control" id="Title" asp-for="Title">
            </div>
            <div class="form-group">
                <label for="ImageUrl">Görsel Url</label>
                <input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl">
            </div>
            <div class="form-group">
                <label for="Description">Açıklama</label>
                <input type="text" class="form-control" id="Description" asp-for="Description">
            </div>
            <button type="submit" class="btn btn-info">Güncelle</button>
        </form>
    </div>
</div>

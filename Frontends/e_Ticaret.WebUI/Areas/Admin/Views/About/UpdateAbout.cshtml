@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="chart-box">
        <p>Aşağıdaki formu düzenleyerek hakkımızda bilgisini güncelleyebilirsiniz.</p>
        <hr />
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="Address">Adres</label>
                <input type="text" class="form-control" id="Address" asp-for="Address">
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" class="form-control" id="Email" asp-for="Email">
            </div>
            <div class="form-group">
                <label for="Phone">Telefon</label>
                <input type="text" class="form-control" id="Phone" asp-for="Phone">
            </div>
            <div class="form-group">
                <label for="Description">Açıklama</label>
                <textarea rows="3" class="form-control" id="Description" asp-for="Description"></textarea>
            </div>
            <button type="submit" class="btn btn-info">Güncelle</button>
        </form>
    </div>
</div>


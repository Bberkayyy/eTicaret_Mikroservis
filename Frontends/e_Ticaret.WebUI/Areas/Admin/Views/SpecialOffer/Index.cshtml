@model IEnumerable<ResultSpecialOfferDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            @if (Model.Count() > 0)
            {
                <div class="chart-box">
                    <p>Özel teklifler ile ilgili işlemlerinizi aşağıdaki tablodan gerçekleştirebilirsiniz.</p>
                    <hr />
                    <div class="bs-example" data-example-id="simple-responsive-table">
                        <div class="table-responsive m-top-2">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık</th>
                                        <th>İndirim Oranı</th>
                                        <th>Görsel Url</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Title</td>
                                            <td>@item.DiscountRate</td>
                                            <td>@item.ImageUrl</td>
                                            <td><a href="/admin/specialoffer/deletespecialoffer/@item.Id" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/admin/specialoffer/updatespecialoffer/@item.Id" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/admin/specialoffer/createspecialoffer/" class="btn btn-primary">Özel Teklif Ekle</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <p class="bg-danger text-white p-4 text-center table-responsive">Özel Teklif bilgisi bulunamadı. Özel Teklif eklemek için "Özel Teklif Ekle" butonuna tıklayınız.</p>
                <a href="/admin/specialoffer/createspecialoffer/" class="btn btn-primary">Özel Teklif Ekle</a>
            }
        </div>
    </div>
</section>

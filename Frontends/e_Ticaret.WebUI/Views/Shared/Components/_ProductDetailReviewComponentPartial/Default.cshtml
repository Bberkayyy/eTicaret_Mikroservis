@model IEnumerable<ResultUserCommentDto>
<div class="tab-pane fade" id="tab-pane-3">
    <div class="row">
        <div class="col-md-6">
            <h4 class="mb-4">Spor ayakkabı için @Model.Count() Yorum"</h4>
            @foreach (var item in Model)
            {
                <div class="media mb-4">
                    <img src="@item.ImageUrl" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                    <div class="media-body">
                        <h6>@item.FullName<small> - <i>@item.CreatedDate.ToString("dd MMMM yyyy", System.Globalization.CultureInfo.GetCultureInfo("Tr-tr"))</i></small></h6>
                        <div class="text-primary mb-2">
                            @for (int i = 0; i < item.Rating; i++)
                            {
                                <i class="fas fa-star"></i>
                            }
                        </div>
                        <p>@item.Detail</p>
                    </div>
                </div>
            }
        </div>
        @await Component.InvokeAsync("_ProductDetailReviewAddReviewComponentPartial", new { productId = ViewBag.productId })
    </div>
</div>
@model ResultContactDto
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="chart-box">
        <p>Aşağıdaki formda site üzerinden gelen mesajın detaylarını görebilirsiniz.</p>
        <hr />
        <form>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="Fullname">Adı Soyadı</label>
                <input type="text" class="form-control" id="Fullname" disabled asp-for="Fullname">
            </div>
            <div class="form-group">
                <label for="Email">Email Adresi</label>
                <input type="email" class="form-control" id="Email" disabled asp-for="Email">
            </div>
            <div class="form-group">
                <label for="Subject">Konusu</label>
                <input type="text" class="form-control" id="Subject" disabled asp-for="Subject">
            </div>
            <div class="form-group">
                <label for="Message">Mesaj</label>
                <textarea rows="5" class="form-control" id="Message" disabled asp-for="Message"></textarea>
            </div>
        </form>
    </div>
</div>


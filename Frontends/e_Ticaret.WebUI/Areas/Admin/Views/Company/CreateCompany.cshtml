@model CreateCompanyDto
@{
    ViewData["Title"] = "CreateCompany";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="chart-box">
        <p>Aşağıdaki formu doldurarak yeni kargo şirketi ekleyebilirsiniz.</p>
        <hr />
        <form method="post">
            <div class="form-group">
                <label for="Name">Şirket Adı</label>
                <input type="text" class="form-control" id="Name" asp-for="Name">
            </div>
            <button type="submit" class="btn btn-info">Kaydet</button>
        </form>
    </div>
</div>


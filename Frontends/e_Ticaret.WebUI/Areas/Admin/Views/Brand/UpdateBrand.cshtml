@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}
<div class="col-md-12">
    <div class="chart-box">
        <p>Aşağıdaki formu düzenleyerek markayı güncelleyebilirsiniz.</p>
        <hr />
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="Name">Marka Adı</label>
                <input type="text" class="form-control" id="Name" asp-for="Name">
            </div>
            <div class="form-group">
                <label for="ImageUrl">Görsel Url</label>
                <input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl">
            </div>
            <button type="submit" class="btn btn-info">Güncelle</button>
        </form>
    </div>
</div>

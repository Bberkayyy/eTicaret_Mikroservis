@{
    ViewData["Title"] = "ShoppingCart";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Ana Sayfa</a>
                <a class="breadcrumb-item text-dark" href="#">Ürünlerimiz</a>
                <span class="breadcrumb-item active">Alışveriş Sepetim</span>
            </nav>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row px-xl-5">
        @await Component.InvokeAsync("_ShoppingCartProductListComponentPartial")
        <div class="col-lg-4">
            @await Component.InvokeAsync("_ShoppingCartDiscountCouponComponentPartial")
            @await Component.InvokeAsync("_ShoppingCartCartSummaryComponentPartial")
        </div>
    </div>
</div>

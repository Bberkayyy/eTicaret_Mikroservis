@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}
<div class="col-md-12">
    <div class="chart-box">
        <p>Aşağıdaki formu düzenleyerek ürünü güncelleyebilirsiniz.</p>
        <hr />
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="CategoryId">Kategori Seçiniz</label>
                @Html.DropDownListFor(x => x.CategoryId, (IEnumerable<SelectListItem>)ViewBag.categoriesForUpdate, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="Name">Ürün Adı</label>
                <input type="text" class="form-control" id="Name" asp-for="Name">
            </div>
            <div class="form-group">
                <label for="Price">Fiyatı</label>
                <input type="text" class="form-control" id="Price" asp-for="Price">
            </div>
            <div class="form-group">
                <label for="ImageUrl">Resmi</label>
                <input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl">
            </div>
            <div class="form-group">
                <label for="Description">Açıklaması</label>
                <textarea rows="5" class="form-control" id="Description" asp-for="Description"></textarea>
            </div>
            <button type="submit" class="btn btn-info">Güncelle</button>
        </form>
    </div>
</div>

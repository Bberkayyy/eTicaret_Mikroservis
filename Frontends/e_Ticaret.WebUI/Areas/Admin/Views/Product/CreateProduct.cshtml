@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#categoryDropdown option:first").attr('disabled', 'disabled');
        });
    </script>
}
<div class="col-md-12">
    <div class="chart-box">
        <p>Aşağıdaki formu doldurarak yeni ürün ekleyebilirsiniz.</p>
        <hr />
        <form method="post">
            <div class="form-group">
                <label for="CategoryId">Kategori Seçiniz</label>
                @Html.DropDownListFor(x => x.CategoryId, (IList<SelectListItem>)ViewBag.categoryList, "Kategori Seçiniz", new { @class = "form-control", id = "categoryDropdown" })
            </div>
            <div class="form-group">
                <label for="Name">Ürün Adı</label>
                <input type="text" class="form-control" id="Name" asp-for="Name">
            </div>
            <div class="form-group">
                <label for="Price">Fiyatı</label>
                <input type="text" class="form-control" id="Price" asp-for="Price">
            </div>
            <div class="form-group">
                <label for="ImageUrl">Resmi</label>
                <input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl">
            </div>
            <div class="form-group">
                <label for="Description">Açıklaması</label>
                <textarea rows="5" class="form-control" id="Description" asp-for="Description"></textarea>
            </div>
            <button type="submit" class="btn btn-info">Kaydet</button>
        </form>
    </div>
</div>



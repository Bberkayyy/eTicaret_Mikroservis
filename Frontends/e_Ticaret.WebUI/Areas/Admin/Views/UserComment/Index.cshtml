@model IEnumerable<ResultUserCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            @if (Model.Count() > 0)
            {
                <div class="chart-box">
                    <p>Kullanıcı yorumları ile ilgili işlemlerinizi aşağıdaki tablodan gerçekleştirebilirsiniz.</p>
                    <hr />
                    <div class="bs-example" data-example-id="simple-responsive-table">
                        <div class="table-responsive m-top-2">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Ürün Adı</th>
                                        <th>Kullanıcı</th>
                                        <th>Yorum</th>
                                        <th>Tarih</th>
                                        <th>Durum</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ProductId</td>
                                            <td>@item.FullName</td>
                                            <td>@item.Detail</td>
                                            <td>@item.CreatedDate.ToString("dd MMM yy", System.Globalization.CultureInfo.GetCultureInfo("Tr-tr"))</td>
                                            <td>@(item.IsActive ? "Aktif" : "Pasif")</td>
                                            <td><a href="/admin/usercomment/deleteusercomment/@item.Id" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/admin/usercomment/updateusercomment/@item.Id" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <p class="bg-danger text-white p-4 text-center table-responsive">Mevcut bir kullanıcı yorumu bulunmamaktadır.</p>
            }
        </div>
    </div>
</section>
